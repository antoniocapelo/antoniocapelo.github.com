{
    "title"    : "{{ post.title }}",
    "category" : "{{ post.category }}",
    "tags"     : [{% for tag in post.tags %}"{{ tag }}"{% if forloop.last == false %},{% endif %}{% endfor %}],
    "href"     : "{{ post.url }}",
    "date"     : {
        "formatted": "{{ post.date | date: "%A %d, %B %Y" }}",
        "day"   : "{{ post.date | date: "%d" }}",
        "month" : "{{ post.date | date: "%B" }}",
        "year"  : "{{ post.date | date: "%Y" }}"
    }
}
